{{ 'section-who-we-are.css' | asset_url | stylesheet_tag }}
<div class="block__who_we_are">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="block__who_we_are_title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="block__who_we_are_caption">
      {% if section.settings.text1 != blank %}
        <div class="block__who_we_are_caption_left">
          {{ section.settings.text1 }}
        </div>
      {% endif %}
      {% if section.settings.text2 != blank %}
        <div class="block__who_we_are_caption_right">
          {{ section.settings.text2 }}
        </div>
      {% endif %}
    </div>
    {% if section.settings.video != blank %}
      <div class="block__who_we_are_video">{{ section.settings.video }}</div>
    {% endif %}
    {% if section.settings.head != blank %}
      <h5 class="block__who_we_are_logo_title">{{ section.settings.head }}</h5>
    {% endif %}
    <div class="block__who_we_are_logo">
      {% for block in section.blocks %}
        {% if block.settings.img != blank %}
          <div class="block__who_we_are_logo_img">
            <img src="{{ block.settings.img |  img_url: 'master' }}" alt="">
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .block__who_we_are{
      padding: {{ section.settings.py }}px 0;
  }
  @media (max-width:1199px){
      .block__who_we_are{
          padding: {{ section.settings.py_t }}px 0;
      }
  }
  @media (max-width:767px){
      .block__who_we_are{
          padding: {{ section.settings.py_m }}px 0;
      }
  }
</style>

{% schema %}
{
  "name": "Who We Are",
  "class": "who-we-are",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "text1",
      "label": "Info Text Left"
    },
    {
      "type": "richtext",
      "id": "text2",
      "label": "Info Text Right"
    },
    {
      "type": "html",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "text",
      "id": "head",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "img1",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "py",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Top-Bottom(Desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "py_t",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Top-Bottom(Tablet)",
      "default": 60
    },
    {
      "type": "range",
      "id": "py_m",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Top-Bottom(Mobile)",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "image_picker",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Logo Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Who We Are"
    }
  ]
}
{% endschema %}

{{ 'images-with-text.css' | asset_url | stylesheet_tag }}

<div class="block__images-with-text-section">
    <div class="page-width">
        <div class="block__images-with-text-box">
            <div class="block__images-with-text-content-box">
                {% if section.settings.heading != blank %}
                    <h2 class="block__images-with-text-content-heading">{{ section.settings.heading }}</h2>
                {% endif %}
                {% if section.settings.description != blank %}
                <div class="block__images-with-text-content-description body_heading">
                    {{ section.settings.description }}
                </div>
                {% endif %}
                <div class="block__images-with-text-features">
                    {% for block in section.blocks %}
                        {% if block.settings.image != blank %}
                        <div class="block__images-with-text-feature-list">
                            <div class="block__images-with-text-feature-icon">
                                <img class="block__images-with-text-feature-img" src="{{ block.settings.image | img_url:"master" }}" alt="Left Iamge" width="" height="" loading="lazy">
                            </div>
                            <div class="block__images-with-text-feature-description body_heading">
                                {{ block.settings.description }}
                            </div>
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="block__images-with-text-member-images">
                    {% if section.settings.image_member != blank %}
                    <div class="block__images-with-text-member-box">
                        <div class="block__images-with-text-member-heading">{{ section.settings.heading_member }}</div>
                        <div class="block__images-with-text-member-image">
                            <img src="{{ section.settings.image_member | img_url:"master" }}" alt="Left Iamge" width="" height="" loading="lazy">
                        </div>
                    </div>
                    {% endif %}
                    {% if section.settings.image_consultants != blank %}
                        <div class="block__images-with-text-member-box">
                            <div class="block__images-with-text-member-heading">{{ section.settings.heading_consultants }}</div>
                            <div class="block__images-with-text-member-image">
                                <a href="https://www.bbb.org/us/fl/clermont/profile/chains/usa-roller-chain-sprockets-0733-90261765/#sealclick" target="_blank" rel="nofollow"><img src="https://seal-centralflorida.bbb.org/seals/blue-seal-293-61-bbb-90261765.png" style="border: 0;" alt="USA Roller Chain & Sprockets BBB Business Review" /></a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="block__images-with-text-content-image">
                {% if section.settings.main_image != blank %}
                <img class="block__images-with-text-content-img block__images-with-text-content-image-desktop" src="{{ section.settings.main_image | img_url:"master" }}" alt="Left Iamge" width="" height="" loading="lazy">

                {% assign mobile_image = section.settings.main_image %}
                {% if section.settings.mobile_main_image != blank %}
                    {% assign mobile_image = section.settings.mobile_main_image %}
                {% endif %}

                <img class="block__images-with-text-content-img block__images-with-text-content-image-mobile" src="{{ mobile_image | img_url:"master" }}" alt="Left Iamge" width="" height="" loading="lazy">
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Images With Text",
        "class": "section",
        "tag": "section",
        "settings": [
            {
                "type": "image_picker",
                "id": "main_image",
                "label": "Image"
            },
            {
                "type": "image_picker",
                "id": "mobile_main_image",
                "label": "Mobile image"
            },
            {
                "type":"text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "richtext",
                "id": "description",
                "label": "Description"
            },
            {
                "type": "header",
                "content": "Member Image"
            },
            {
                "type": "text",
                "id": "heading_member",
                "label": "Member Heading"
            },
            {
                "type": "image_picker",
                "id": "image_member",
                "label": "Member Image"
            },
            {
                "type": "header",
                "content": "Consultants"
            },
            {
                "type": "text",
                "id": "heading_consultants",
                "label": "Consultants Heading"
            },
            {
                "type": "image_picker",
                "id": "image_consultants",
                "label": "Consultants Image"
            }
        ],
        "blocks": [
            {
                "type": "text",
                "name": "Text",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "richtext",
                        "id": "description",
                        "label": "Description"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Images With Text"
            }
        ]
    }
{% endschema %}

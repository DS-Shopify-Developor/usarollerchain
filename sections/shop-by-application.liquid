{{ 'shop-by-application.css' | asset_url | stylesheet_tag }}
<div class="block__shop-by-application-section mb-80 section_{{ section.id }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <div class="page-width">
        <style>
            .section_{{ section.id }} {
                background:{{ section.settings.background_color }};
            }
        </style>
        <div class="block__shop-by-application">
            <div class="block__shop-by-application-box">
                {% if section.settings.heading != blank %}
                    <h4 class="block__shop-by-application-heading">{{ section.settings.heading }}</h4>
                {% endif %}
                <div class="block__shop-by-application-listing">
                    {% for block in section.blocks %}
                        <div class="block__shop-by-application-list">
                            <a class="block__shop-by-application-list-link" href="{% if block.settings.collection.url != blank %}{{ block.settings.collection.url }} {% else %} {{ block.settings.page_url }} {% endif %}">
                                <div class="block__shop-by-application-list-image">
                                    {% if block.settings.image != blank %}
                                        <img class="block__shop-by-application-list-img" src="{{ block.settings.image | img_url:"300x300" }}" alt="Left Iamge" width="" height="" loading="lazy">
                                    {% endif %}
                                </div>
                                <div class="block__shop-by-application-list-heading">{{ block.settings.heading }}</div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Shop By Application",
        "class": "section",
        "tag": "section",
        "settings": [
            {
                "type": "color",
                "id": "background_color",
                "label": "Background Color"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            }
        ],
        "blocks": [
            {
                "type": "collection",
                "name": "Collection",
                "settings": [
                    {
                        "type": "collection",
                        "id": "collection",
                        "label": "Collection"
                    },
                    {
                        "type": "url",
                        "id": "page_url",
                        "label": "Url"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Shop By Application"
            }
        ]
    }
{% endschema %}

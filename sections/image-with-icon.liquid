{{ 'image-with-icon.css' | asset_url | stylesheet_tag }}
<div class="block__image-with-icon-section section_{{ section.id }}">
    <div class="page-width">
        <style>
            .section_{{ section.id }} .block__image-with-icon-list-link {
                background: {{ section.settings.background_color }};
            }
        </style>
        <div class="block__image-with-icon-box {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            <div class="block__image-with-icon-listing">
                {% for block in section.blocks %}
                    {% if block.settings.image != blank %}
                        <div class="block__image-with-icon-list">
                            <a class="block__image-with-icon-list-link" href="{{ block.settings.collection.url }}">
                                <div class="block__image-with-icon">
                                    <img class="block__image-with-icon-img" src="{{ block.settings.image | img_url:"master" }}" alt="Category" loading="lazy" width="" height="">
                                </div>
                                {% if block.settings.heading != blank %}
                                    <p class="block__image-with-icon-heading">{{ block.settings.heading }}</p>
                                {% endif %}
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% schema %}
    {
        "name": "Image with Icon",
        "class": "section",
        "tag": "section",
        "settings": [
            {
                "type": "color",
                "id": "background_color",
                "label": "Background Color"
            }
        ],
        "blocks": [
            {
                "type": "image",
                "name": "Image",
                "settings": [
                    {
                        "type": "collection",
                        "id": "collection",
                        "label": "Collection"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label":"Image"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Image with Icon"
            }
        ]
    }
{% endschema %}

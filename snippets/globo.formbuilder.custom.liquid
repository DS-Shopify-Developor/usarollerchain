{% if customer %}
    <script>
      document.addEventListener('globo.formbuilder.form.loaded', e => {
        if (e.detail.formId == "65311") {
          let el = e.detail.form
          el.querySelector('input[name="email-1"]').value = '{{ customer.email }}'
          el.querySelector('input[name="phone-1"]').value = '{{ customer.phone }}'
          el.querySelector('input[name="name-1"]').value = '{{ customer.first_name }}'
        }
      })
    </script>
    
    <style>
      .globo-form-app[data-id="65311"] .globo-form-control[data-type="email"]::before {
        content: "";
        display: block;
        width: 98%;
        height: 63%;
        position: absolute;
        bottom: 0;
        background: #dedede;
        opacity: .3;
        z-index: 3;
        cursor: not-allowed;
      }
    
      .globo-form-app[data-id="65311"] .globo-form-control[data-type="email"] .globo-label {
        pointer-events: none;
      }
    </style>
    {% endif %}
